name: Update badges

on:
  schedule:
    # Runs at 0am UTC every day
    - cron: "58 16 * * *"
jobs:
  update-readme:
    name: Update Readme with badges
    runs-on: ubuntu-latest
    steps:
      - name: Badges - Readme
        uses: pemtajo/badge-readme@main
        with:
          COMMIT_MESSAGE: "My commit message to update badges"
          CREDLY_USER: diana-novita
          CREDLY_SORT: POPULAR
